{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel-php"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://your-app.vercel.app",
    "DB_CONNECTION": "mysql",
    "DB_HOST": "127.0.0.1",
    "DB_PORT": "3306",
    "DB_DATABASE": "portofolio",
    "DB_USERNAME": "root",
    "DB_PASSWORD": ""
  }
}
